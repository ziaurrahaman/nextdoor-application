<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewPostActivity"
    android:orientation="vertical"
    android:background="@drawable/graphical_background"

    >

    <include layout="@layout/navigation_drawer_toolbar"
        android:id="@+id/add_new_post_toolbar"/>
    <ImageButton
        android:id="@+id/post_imagebutton_id"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/select_image"
        android:scaleType="fitCenter"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/about_post_image_text"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textColor="#0A0A0A"
        android:ems="10"
        android:hint="Say something about your post"
        android:inputType="textMultiLine"


        />
    <Button
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:id="@+id/update_post_button"
        android:layout_marginTop="65dp"
        android:text="Update Post"
        android:background="@drawable/button"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        />


</LinearLayout>