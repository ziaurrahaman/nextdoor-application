<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:background="@drawable/graphical_background">

    <ImageView
        android:layout_width="292dp"
        android:layout_height="173dp"
        android:src="@drawable/logo2_edited"
        android:layout_marginLeft="35dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/header_text"/>
    <EditText
        android:id="@+id/enter_email_id"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:background="@drawable/enter_email_box"
        android:drawableLeft="@drawable/email"
        android:hint="email"
        android:textColor="#0A0A0A"
        android:padding="10dp"
        android:inputType="text"/>
    <EditText
        android:id="@+id/enter_password_id"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:background="@drawable/enter_password_box"
        android:drawableLeft="@drawable/password"
        android:padding="10dp"
        android:hint="password"
        android:textColor="#0A0A0A" />
    <Button
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:id="@+id/login_button_id"
        android:background="@drawable/account_create_box"
        android:text="LogIn"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textAlignment="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do not have an account?Need an Account"
        android:textAlignment="center"
        android:layout_marginLeft="50dp"
        android:textColor="#FFFFFF"/>
    <TextView
        android:id="@+id/signup_link_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SingUp"
        android:layout_marginLeft="160dp"
        android:textColor="#FFFFFF"
        android:textSize="20dp"/>

</LinearLayout>